FROM nginx:stable

# Install Python and other necessary packages
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-requests \
    python3-docker \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create a simple Python script for health checks
RUN echo '#!/usr/bin/env python3\nprint("Python is available")' > /usr/local/bin/health_check.py \
    && chmod +x /usr/local/bin/health_check.py

# Keep the default nginx configuration
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
